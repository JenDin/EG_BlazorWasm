<header>
    <nav class="bg-[#d7c0a6] text-white md:flex md:justify-between md:items-center">
        <div class="bg-[#d7c0a6] text-white">
            <div class="flex items-center justify-between p-3">
                <!-- Logo -->
                <div>
                    <NavLink href="/"><img src="/images/logo.png" alt="Ege Glutensiz yazan kırmızı logo" class="w-[70px]" /></NavLink>
                </div>

                <!-- Hamburger icon -->
                <button @onclick="ToggleMenu" class="md:hidden">
                    <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
                        <path fill-rule="evenodd"
                              d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z" />
                    </svg>
                </button>
            </div>
        </div>

        @{
            var menuVisibleClass = _showMenu ? "block" : "hidden";
        }

        <!-- Links -->
        <ul class="@($"flex flex-col {menuVisibleClass} bg-[#d7c0a6] px-4 py-2 md:flex md:flex-row md:bg-transparent")">
            <li><NavLink class="mr-3 py-2 block hover:underline" href="/ürünler" Match="NavLinkMatch.All">Ürünler</NavLink></li>
            <li><NavLink class="mr-3 py-2 block hover:underline" href="/tarifler" Match="NavLinkMatch.All">Tarifler</NavLink></li>
            <li><NavLink class="py-2 block hover:underline" href="/satis_agi" Match="NavLinkMatch.All">Satış ağı</NavLink></li>
        </ul>
    </nav>
</header>

@code
    {
    private bool _showMenu = false;

    private void ToggleMenu()
    {
        _showMenu = !_showMenu;
    }
}
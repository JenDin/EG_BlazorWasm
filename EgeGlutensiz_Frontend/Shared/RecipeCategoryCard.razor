@using EgeGlutensiz_Frontend.Models
@inject NavigationManager UriHelper

<!-- Recipe card component -->
<div class="max-w-[300px]">
    <img src="images/test2.png" alt="" class="hover:opacity-75 rounded-t-lg" />
    <div class="block max-w-sm p-4 bg-sky-100 rounded-b-lg">
        @if (recipe != null)
        {<h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">@recipe?.title</h2>
    }
        <p>@GetUrl()</p>
        <p class="mb-1"><span class="font-semibold">Toplam Süre:</span> @recipe?.recipeRegion?.totalDuration?.value dk</p>
        <p class="mb-1"><span class="font-semibold">Porsiyon:</span> @recipe?.recipeRegion?.portions?.value</p>

            <a href="@GetUrl()" class="inline-flex items-center mt-4 px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-t-lg rounded-bl-lg">
                Read more
                <svg aria-hidden="true" class="w-4 h-4 ml-2 -mr-1" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
            </a>
        
    </div>
</div>

@code {

    [Parameter]
    public RecipeCategoryModel.Root recipeCategory { get; set; }

    [Parameter]
    public RecipeModel.Root recipe { get; set; }

    public string GetUrl()
    {
        return recipe != null ?  $"{UriHelper.Uri}/{recipe.slug}" : "No bueno";

    }

    // Skicka sluggen till product details
    async Task GoToPage(string slug)
    {
        UriHelper.NavigateTo($"/{slug}");

    }
}